{
  "private": true,
  "name": "homepage",
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --prerender=false --no-inline-css",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --host localhost --https --key .certs/localhost+3-key.pem --cert .certs/localhost+3.pem",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest ./tests",
    "deploy:remote": "node ./scripts/deploy.js",
    "deploy": "run-s build deploy:remote"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.scss": "stylelint --fix"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "preact": "^10.3.1",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.0.0",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "@teamsupercell/typings-for-css-modules-loader": "^2.2.0",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.8",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "css-loader": "^3.5.3",
    "du": "^1.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "favicons-webpack-plugin": "^2.1.0",
    "husky": "^4.2.1",
    "jest": "^26.2.2",
    "jest-preset-preact": "^4.0.2",
    "lint-staged": "^10.0.7",
    "node-ssh": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "preact-cli": "^3.0.0",
    "prettier": "^1.19.1",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "simple-ssh": "^1.0.0",
    "sirv-cli": "^1.0.0-next.3",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-scss": "^3.18.0",
    "typescript": "^3.7.5"
  }
}
